<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="StyleToolbar">
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="StyleBotoesMenuPrincipal">
        <item name="android:background">@drawable/shape_botoes_principais</item>
    </style>

    <style name="StyleTextBotoesMenuPrincipal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/santralextrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextVersaoDoAplicativo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor"> @color/cinza</item>
        <item name="android:fontFamily">@font/santralbookitalic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleItemMenuPrincipalAtivo">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/santralmedium</item>
    </style>

    <style name="StyleItemMenuPrincipalInativo">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/santrallight</item>
    </style>


    <style name="StyleViewDadosDoCliente">
        <item name="android:background">@drawable/shape_view_dados_do_cliente</item>
    </style>

    <style name="StyleTextPrincipalDaFragmentDadosDoCliente">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/fragment_dados_do_cliente__textos_principais</item>
        <item name="android:fontFamily">@font/santralextrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextNomeDaFragmentDadosDoCliente">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fragment_dados_do_cliente__textos_principais</item>
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTextNomeEmpresaDaFragmentDadosDoCliente">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor"> @color/cinza</item>
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTextLabelDaFragmentDadosDoCliente">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor"> @color/label_fragment_dados_do_cliente</item>
        <item name="android:fontFamily">@font/santralsemibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextValoresDaFragmentDadosDoCliente">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/fragment_dados_do_cliente__textos_principais</item>
        <item name="android:fontFamily">@font/santralsemibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleBotaoVerificarStatusDoCliente">
        <item name="android:background">@drawable/shape_do_botao_verificar_status_do_cliente</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextLabelDaFragmentHistoricoDePedidos">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor"> @color/label_fragment_dados_do_cliente</item>
        <item name="android:fontFamily">@font/santralextrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextValoresDaFragmentHistoricoDePedidos">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/fragment_dados_do_cliente__textos_principais</item>
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextPrincipalDaFragmentAlvara">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor"> @color/fragment_alvara__texto_principal</item>
        <item name="android:fontFamily">@font/santralextrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextSecundarioDaFragmentAlvara">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor"> @color/fragment_alvara__texto_secundario</item>
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextLegendasDoDialogLegendas">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor"> @color/fragment_alvara__texto_principal</item>
        <item name="android:fontFamily">@font/santralextrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTextStatusDoPedidoDoDialogLegendas">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor"> @color/fragment_alvara__texto_principal</item>
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleImageViewStatusDoPedidoDoDialogLegendas">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor"> @color/white</item>
        <item name="android:fontFamily">@font/santralbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>